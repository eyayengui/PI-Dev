{% extends 'base-back.html.twig' %}

{% block title %}New Questionnaire{% endblock %}

{% block body %}
<script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>

    <h1>Ajouter un Questionnaire</h1>
<div class="col-12">
    <div class="box">
        <div class="box-header with-border">
             {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}    <br>
               <div class="form-group">
                <h5>Titre Questionnaire <span class="text-danger">*</span></h5>
                    <div class="controls">
                        {{ form_row(form.title_questionnaire, {
                            'attr': {'class': 'form-control', 'required': 'required'},
                            'label': false
                        }) }}
                    </div>
                </div>
                <div class="form-group">
                <h5>Date <span class="text-danger">*</span></h5>
                    <div class="controls">
                        {{ form_row(form.date, {
                            'attr': {'class': 'form-control', 'required': 'required'},
                            'label': false
                        }) }}
                    </div>
                </div>
                <div class="form-group">
                <h5>Description <span class="text-danger">*</span></h5>
                    <div class="controls">
                        {{ form_row(form.description, {
                            'attr': {'class': 'form-control', 'required': 'required'},
                            'label': false
                        }) }}
                    </div>
                </div>
               {# {{ form_row(form.description) }} #}

              <button type="submit" class="btn btn-secondary">Enregistrer</button>
              <a href="{{ path('app_questionnaire_index') }}" class="btn">Retourner</a>

              {{ form_end(form) }}
            </div>
     </div>
 </div>

{% endblock %}

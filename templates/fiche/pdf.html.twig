<style>
.card-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
}
.card {
    background-color: #f5f5f5;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    width: calc(33.33% - 20px);
    transition: background-color 0.3s ease; /* Add transition effect */
}

.card:hover {
    background-color: #e0e0e0; /* Darken the background color on hover */
}

.card-header {
    background-color: #0f4c75;
    color: white;
    padding: 10px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}

.card-body,
.card-footer {
    padding: 10px;
    color: black;
}

.card-footer a {
    color: black;
    margin-right: 10px;
    text-decoration: none;
}

.card-footer a:hover {
    text-decoration: underline;
}

.card-title {
    color: white;
}
    .error-message {
    color: red;
    font-size: 14px;
    margin-top: 5px;
}

.card-footer a.button {
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin-right: 10px;
    text-decoration: none;
}

.card-footer a.button:hover {
    background-color: #0056b3;
    text-decoration: none;
}

.card-footer a.button:last-child {
    margin-right: 0; /* Remove margin from the last button */
}
.action-links a {
        margin-right: 5px;
    }
.action-links a {
        margin-right: 10px;
        text-decoration: none;
        color: black; 
    }

    .action-links a:hover {
        text-decoration: underline;
    }
.action-links a {
        display: inline-block;
        padding: 8px 16px;
        background-color: #0f4c75;
        color: white;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .action-links a:hover {
        background-color: #1b6ca8;
    }
    .consultation-line {
    border-top: 3px solid #333; /* Increase thickness and darken the color for better visibility */
    margin-top: 5px;
    margin-bottom: 5px;
}
</style>
<!DOCTYPE html>
<html lang="fr">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historique des Utilisateurs</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #ffc0cb; /* Rose clair */
            color: white;
        }

        tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>

<body>
<div class="card-container">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Id Fiche: {{ fiche.getId() }}</h4>
        </div>
        <div class="card-body">
            <p><strong>Id Patient:</strong> {{ fiche.getIdP() }}</p>
            <p><strong>ID Th√©rapeute:</strong> {{ fiche.getidT() }}</p>
            <p><strong>Date Creation:</strong> {{ fiche.getDateCreation()|date('Y-m-d') }}</p>
            <p><strong>Derniere Mise a jour:</strong> {{ fiche.getDerniereMaj()|date('Y-m-d') }}</p>
        </div>
        <div class="card-footer">
            <h5>Consultations:</h5>
            <ul>
                {% for consultation in fiche.getConsultations() %}
                    <li>Id Consultation: {{ consultation.getId() }}</li>
                    <li>Date Consultation: {{ consultation.getDateC() ? consultation.getDateC()|date('Y-m-d') : 'N/A' }}</li>
                    <hr class="consultation-line"> 
                {% endfor %}
            </ul>
        </div>
        <div class="action-links">
            <a href="{{ path('supp_fiche', {'id': fiche.getId()}) }}" class="button">Delete</a>
            <a href="{{ path('edit_fiche', {'id': fiche.getId()}) }}" class="button">Edit</a>
        </div>

    </div>
</div>
</body>

</html>

{% extends 'base-back.html.twig' %}
{% block body %}

 <div class="container">
        <h1 class="mt-4 mb-4">Ajouter une publication</h1>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                {{ form_start(formA) }}
                <div class="form-group">
                    {{ form_label(formA.Titre_P) }}
                    {{ form_widget(formA.Titre_P, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(formA.Description_P) }}
                    {{ form_widget(formA.Description_P, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(formA.imageFile) }}
                    {{ form_widget(formA.imageFile, {'attr': {'class': 'form-control-file'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(formA.Date_P) }}
                    {{ form_widget(formA.Date_P, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(formA.ID_User) }}
                    {{ form_widget(formA.ID_User, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Ajouter</button>
                {{ form_end(formA) }}
            </div>
        </div>
    </div>
{% endblock %}

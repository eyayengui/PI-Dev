{# templates/publication/listPublication.html.twig #}

{% extends 'base-front.html.twig' %}

{% block title %}Liste des publications{% endblock %}

{% block body %}
<div class="page-wrapper">
{% include 'chat.html.twig' %}

    <!--Page Header Start-->
            <section class="page-header">
                <div class="page-header-bg" style="background-image: url(front-office/images/backgrounds/page-header-bg.jpg)">
                </div>
                <div class="container">
                    <div class="page-header__inner">
                        <h2>Publications</h2>
                        <ul class="thm-breadcrumb list-unstyled">
                            <li><a href="index.html">Home</a></li>
                            <li><span>/</span></li>
                            <li>Publications</li>
                        </ul>
                    </div>
                </div>
            </section>
            <!--Page Header End-->
            </div>

        <section class="blog-one">
                    <div class="container">
                        <div class="row">
            {% for publication in publications %}
                    <!--Blog One Single Start-->
                    <div class="col-xl-4 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="100ms">
                        <div class="blog-one__single">
                            <div class="blog-one__img-box">
                                <div class="blog-one__img">
                                   <img src="{{ asset('/upload-images/' ~ publication.getImageP()) }}" alt="Publication Image"style="width: 400px; height: 250px;">
                                    <a href="blog-details.html">
                                        <span class="blog-one__plus"></span>
                                    </a>
                                    <div class="blog-one__date">
                                        <p>{{ publication.getDateP()|date('Y-m-d ') }}
                                        </div>
                                </div>
                                <div class="blog-one__content-top">
                                    <div class="blog-one__content-img">
                                        <img src="{{ asset('/upload-images/' ~ publication.IDUser.getProfilePicture()) }}" style="width: 20%; height: 20%;">
                                    </div>
                                    <p class="blog-one__content-sub-title">pub nÂ°{{ publication.id }}:</p>

                                     <h3><a href="{{ path('publication_details', {'id': publication.id}) }}">{{ publication.getTitreP() }}</a></h3>
                                </div>
                            </div>
                            <div class="blog-one__content">
                                <div class="blog-one__comment-and-btn">
                                    <div class="blog-one__comment">
                                        <a href="{{ path('publication_details', {'id': publication.id}) }}"><span class="fas fa-comments"></span>{{ commentairesParPublication[publication.id] }} Comments</a>
                                    </div>
                                    <div class="blog-one__btn">
                                        <a href="{{ path('publication_details', {'id': publication.id}) }}"><span class="icon-right-arrow"></span>More</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Blog One Single End-->

            {% endfor %}


                  </div>
            </div>
        </section>



</div>
 

{% endblock %}
    
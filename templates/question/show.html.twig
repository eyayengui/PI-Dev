{% extends 'base-back.html.twig' %}

{% block body %}
<h1>Liste des Questions</h1>
<div class="box-body">
	<div class="table-responsive-sm">
		<table class="table mb-0">
			<thead>
<table>
    <thead>
        <tr>
			<th scope="col">#</th>
            <th scope="col">Question</th>
			<th scope="col">Propositions</th>
			<th scope="col">Action</th>
				
		</tr>
    </thead>
    <tbody>
        {% for question in question %} {# Assurez-vous que la variable est au pluriel si elle contient plusieurs questions #}
        <tr>
            <th scope="row">1</th>
            <td>{{ question.titleQuestion }}</td>
            <td>
                {% for proposition in question.proposition %} {# Assurez-vous que vous utilisez le bon nom de propriété pour accéder aux propositions #}
                    {{ proposition.titleProposition }}<br>
                {% else %}
                    Pas de propositions
                {% endfor %}
            </td>
            <td>
                <a href="{{ path('question_update', {'id': question.id}) }}">Update</a> |
                <a href="{{ path('question_delete', {'id': question.id}) }}">Delete</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<a href="{{ path('app_question_new') }}" class="btn">Add</a>
{% endblock %}


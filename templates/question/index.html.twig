{% extends 'base-back.html.twig' %}

{% block title %}Question index{% endblock %}

{% block body %}
<div class="col-12">
    <div class="box">
        <div class="box-header with-border">
            <h4 class="box-title">Questions Base de Donn√©e</h4>
            <div class="box-controls pull-right">
                <div class="lookup lookup-circle lookup-right">
                    <input type="text" name="s">
                </div>
            </div>
        </div>
        <div class="box-body no-padding">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID Questionnaire</th>
                            <th>Question</th>
                            <th>Propositions</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for question in questions %}
                        <tr>
                            <td>{{ question.questionnaires.id }}</td>
                            <td>{{ question.titleQuestion }}</td>
                            <td>
<<<<<<< Updated upstream
                                {% for proposition in question.questions %}
=======
                                {% for proposition in question.proposition %}
>>>>>>> Stashed changes
                                    {{ proposition.titleProposition }}<br>
                                {% else %}
                                    Pas de propositions
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ path('app_question_edit', {'id': question.id}) }}">Editer</a> |
                                <a href="{{ path('app_question_delete', {'id': question.id}) }}">Supprimer</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                &ensp;&ensp;&ensp;&ensp;&ensp;<a href="{{ path('app_question_new') }}" class="btn btn-primary">Ajouter</a>
                <br>
            </div>
            <br>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
	<!-- Vendor JS -->
	<script src="{{asset('back-office/js/vendors.min.js')}}"></script>
	<script src="{{asset('back-office/js/pages/chat-popup.js')}}"></script>
    <script src="{{asset('back-office/../assets/icons/feather-icons/feather.min.js')}}"></script>	
	
	<!-- Doclinic App -->
	<script src="{{asset('back-office/js/template.js')}}"></script>
	
	
	
</body>
{% endblock %}
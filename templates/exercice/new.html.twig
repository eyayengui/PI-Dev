{# templates/exercice/new.html.twig #}

{% extends 'base-back.html.twig' %}

{% block title %}New Programme{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Create New Exercoe</h4>
                    </div>
                    <div class="card-body">
                        {% if flashy.success is defined %}
                            <div class="alert alert-success" role="alert">
                                {{ flashy.success }}
                            </div>
                        {% endif %}
                        {{ include('exercice/form.html.twig') }}
                    </div>
                </div>
                <div class="mt-3">
                    <a href="{{ path('app_exercice_index') }}" class="btn btn-outline-primary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'base-front.html.twig' %}

{% block body %}
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    th {
        background-color: #f2f2f2;
    }
    tr:hover {
        background-color: #f5f5f5;
    }
    .action-links a {
        margin-right: 5px;
    }
    /* Add custom styles for form labels */
    form label {
        display: inline-block;
        width: 150px; /* Adjust the width as needed */
        text-align: center;
    }
    .submit-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #005F6B; /* Blue color */
        color: white;
        text-align: center;
        text-decoration: none;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    .submit-button:hover {
        background-color: #005F6B; /* Darker blue color on hover */
    }
    .consultation-cards {
    display: flex;
    flex-wrap: wrap;
    gap: 20px; /* Adjust the gap between cards */
}

.consultation-card {
    background-color: #f5f5f5; /* Adjust the background color */
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    width: calc(33.33% - 20px); /* Adjust the width of each card */
}



.card-details {
    margin-bottom: 10px;
}

.detail-label {
    font-weight: bold;
}

.action-links a {
    margin-right: 10px;
    text-decoration: none;
    color: #007bff; /* Adjust link color */
}

.action-links a:hover {
    text-decoration: underline;
}
</style>

<section class="make-appointment">
    <div class="container">
        <div class="row">
            <div class="col-xl-6">
                <div class="make-appointment__left">
                    <div class="section-title text-left">
                        <span class="section-title__tagline">contact with us</span>
                        <h2 class="section-title__title">Edit <span>Your</span> <br> Appointment</h2>
                    </div>
                    <div class="make-appointment__form-box">
                        {{ form_start(formA, {'attr': {'class': 'make-appointment__form contact-form-validated', 'novalidate': 'novalidate'}}) }}
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="make-appointment__form-input-box">
                                        <label for="{{ formA.date_c.vars.id }}">Date Consultation:</label>
                                        {{ form_widget(formA.date_c, {'attr': {'placeholder': 'Date Consultation', 'class': 'form-control'}}) }}
                                        {{ form_errors(formA.date_c) }} {# Display errors for this field #}
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="make-appointment__form-input-box">
                                        <label for="{{ formA.pathologie.vars.id }}">Pathologie:</label>
                                        {{ form_widget(formA.pathologie, {'attr': {'placeholder': 'Pathologie', 'class': 'form-control'}}) }}
                                        {{ form_errors(formA.pathologie) }} {# Display errors for this field #}
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="make-appointment__form-input-box">
                                        <label for="{{ formA.remarques.vars.id }}">Remarques:</label>
                                        {{ form_widget(formA.remarques, {'attr': {'placeholder': 'Remarques', 'class': 'form-control'}}) }}
                                        {{ form_errors(formA.remarques) }} {# Display errors for this field #}
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="make-appointment__form-input-box">
                                        <label for="{{ formA.idp.vars.id }}">Id Patient:</label>
                                        {{ form_widget(formA.idp, {'attr': {'placeholder': 'Id Patient', 'class': 'form-control'}}) }}
                                        {{ form_errors(formA.idp) }} {# Display errors for this field #}
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="make-appointment__form-input-box">
                                        <label for="{{ formA.idt.vars.id }}">Id Thérapeute:</label>
                                        {{ form_widget(formA.idt, {'attr': {'placeholder': 'Id Thérapeute', 'class': 'form-control'}}) }}
                                        {{ form_errors(formA.idt) }} {# Display errors for this field #}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="make-appointment__form-btn-box">
                                        {{ form_row(formA.Ajouter, {'attr': {'class': 'thm-btn make-appointment__form-btn'}}) }}
                                    </div>
                                </div>
                            </div>
                        {{ form_end(formA) }}
                        <div class="result"></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="make-appointment__right">
                    <!-- Add images or other content as needed -->
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% extends 'base-front.html.twig' %}

{% block body %}
{% include 'chat.html.twig' %}

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .action-links a {
        margin-right: 5px;
    }

    form label {
        display: inline-block;
        width: 150px; 
        text-align: center;
    }

    .submit-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #005F6B; 
        color: white;
        text-align: center;
        text-decoration: none;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .submit-button:hover {
        background-color: #005F6B; 
    }

    .consultation-cards {
    display: flex;
    flex-wrap: wrap;
    gap: 20px; 
}

.consultation-card {
    background-color: #f5f5f5; 
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    width: calc(33.33% - 20px);
    color: black; 
    transition: background-color 0.3s ease; /* Add transition effect */
}

.consultation-card:hover {
    background-color: #e0e0e0; /* Darken the background color on hover */
}

.card-header {
    background-color: #0f4c75; 
    color: white; 
    font-size: 18px; 
    padding: 10px; 
    border-radius: 8px 8px 0 0; 
    width: 100%; 
    text-align: center; 
    margin-bottom: 10px; 
}

.card-details {
    margin-bottom: 10px;
}

.detail-label {
    font-weight: bold;
}

.action-links a {
    margin-right: 10px;
    text-decoration: none;
    color: black; 
}

.action-links a:hover {
    text-decoration: underline;
}

.consultation-card .consultation-id {
    font-size: 24px;
    font-weight: bold;
    color: white;
    background-color: #0f4c75;
    padding: 10px;
    border-radius: 8px;
    text-align: center;
}

.consultation-card .consultation-details {
    font-size: 16px;
}
.error-message {
    color: red;
}


    .action-links a {
        display: inline-block;
        padding: 8px 16px;
        background-color: #0f4c75;
        color: white;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .action-links a:hover {
        background-color: #1b6ca8;
    }
.completed-box {
    background-color: #6cb2eb; /* Light blue background color */
    color: #fff; /* White text color */
    border-radius: 5px; /* Rounded corners */
    padding: 5px 10px; /* Padding */
    display: inline-block; /* Display as inline block */
}

.completed-box span {
    font-weight: bold; /* Bold text */
}

.completed-box i {
    margin-left: 5px; /* Add some space between text and icon */
}
.confirmed-box {
    background-color: rgba(0, 128, 0, 0.7); /* Green with 70% opacity */
    color: white;
    border-radius: 5px; /* Rounded corners */
    padding: 5px 10px; /* Padding */
    display: inline-block; /* Display as inline block */
}

.pending-box {
    background-color: rgba(255, 165, 0, 0.7); /* Orange with 70% opacity */
    color: white;
    border-radius: 5px; /* Rounded corners */
    padding: 5px 10px; /* Padding */
    display: inline-block; /* Display as inline block */
}
.search-form {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-bottom: 20px;
    }

    .search-form label {
        font-weight: bold;
        margin-right: 5px;
        margin-bottom: 5px; /* Added margin bottom for stacking */
    }

    .search-form input[type="text"],
    .search-form input[type="date"] {
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 200px; /* Adjust width as needed */
    }

    .search-form button {
    padding: 5px 10px;
    background-color: #007bff;
    color: #fff;
    border: 1px solid #007bff; /* Add border */
    border-radius: 5px;
    cursor: pointer;
}

.search-form button:hover {
    background-color: #0056b3;
    border-color: #0056b3; /* Change border color on hover */
}
</style>
<br>
<div class="container">
<div class="row">
<form action="{{ path('search_consultation') }}" method="get" class="search-form">
    <div>
        <label for="Pathologie">Chercher par Pathologie:</label>
        <input type="text" id="Pathologie" name="Pathologie">
    </div>

    <div>
        <label for="start_date">Date début:</label>
        <input type="date" id="start_date" name="start_date">
    </div>

    <div>
        <label for="end_date">Date limite:</label>
        <input type="date" id="end_date" name="end_date">
    </div>
<br>

    <button type="submit">Chercher</button>
</form>
</div>
</div>
<div class="container">
            <div class="row">
                        <div class="consultation-cards">
                            {% for consultation in consultations %}
                                <div class="consultation-card">
                                    <div class="card-details">
                                        <div class="card-detail">
                                            <span class="detail-label">Date consultation:</span>
                                            <span class="detail-value">{{ consultation.getDateC() ? consultation.getDateC()|date('Y-m-d') : '' }}</span>
                                        </div>
                                        <div class="card-detail">
                                            <span class="detail-label">Pathologie:</span>
                                            <span class="detail-value">{{ consultation.getpathologie }}</span>
                                        </div>
                                        <div class="card-detail">
                                            <span class="detail-label">Remarques:</span>
                                            <span class="detail-value">{{ consultation.getremarques }}</span>
                                        </div>
                                        <div class="card-detail">
                                            <span class="detail-label">Therapeute:</span>
                                            <span class="detail-value">{{ consultation.getidt.nom }}</span>
                                        </div>
                                        <div class="card-detail">
                                            {% if consultation.isCompleted() %}
                                                <div class="completed-box">
                                                    <span>Achevée</span>
                                                    <i class="fas fa-check"></i>
                                                </div>
                                            {% endif %}
                                            {% if consultation.getConfirmation() %}
                                                <div class="confirmed-box">
                                                    <span>Confirmé</span>
                                                </div>
                                            {% else %}
                                                <div class="pending-box">
                                                    <span>En attente</span>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="action-links">
                                        <a href="{{ path('supp_consultation', {'id': consultation.getid()}) }}">Delete</a>
                                        <a href="{{ path('edit_consultation', {'id': consultation.getid()}) }}">Edit</a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        </div>
                    </div>    
            </div>
</div>
<br>
<div class="container">
            <div class="row">
<form action="{{ path('consultations_ordered_by_date') }}" method="get">
  <button type="submit" style="background-color: #004080; color: white; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer;">Trier par Date</button>    </form>
</form>
</div>
</div>
<br>
{% if consultations != null %}
<div class="container">
            <div class="row">
<form action="{{ path('calendar') }}" method="get">
    <button type="submit" style="background-color: #cc6666; color: white; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer; transition: background-color 0.3s;">Voir Calendrier</button>
</form>
</div>
</div>
{% endif %}
{% endblock %}

{% extends 'base-front.html.twig' %}

{% block body %}
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .action-links a {
        margin-right: 5px;
    }

    form label {
        display: inline-block;
        width: 150px; 
        text-align: center;
    }

    .submit-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #005F6B; 
        color: white;
        text-align: center;
        text-decoration: none;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .submit-button:hover {
        background-color: #005F6B; 
    }

    .consultation-cards {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; 
    }

    .consultation-card {
        background-color: #f5f5f5; 
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        width: calc(33.33% - 20px);
        color: black; 
    }

    .card-header {
        background-color: #0f4c75; 
        color: white; 
        font-size: 18px; 
        padding: 10px; 
        border-radius: 8px 8px 0 0; 
        width: 100%; 
        text-align: center; 
        margin-bottom: 10px; 
    }

    .card-details {
        margin-bottom: 10px;
    }

    .detail-label {
        font-weight: bold;
    }

    .action-links a {
        margin-right: 10px;
        text-decoration: none;
        color: black; 
    }

    .action-links a:hover {
        text-decoration: underline;
    }

    .consultation-card .consultation-id {
        font-size: 24px;
        font-weight: bold;
        color: white;
        background-color: #0f4c75;
        padding: 10px;
        border-radius: 8px;
        text-align: center;
    }

    .consultation-card .consultation-details {
        font-size: 16px;
    }
    .error-message {
    color: red;
    }
    .consultation-card:hover {
        background-color: #e0e0e0;
        transition: background-color 0.3s ease;
    }

    .action-links a {
        display: inline-block;
        padding: 8px 16px;
        background-color: #0f4c75;
        color: white;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .action-links a:hover {
        background-color: #1b6ca8;
    }


</style>





<div class="consultation-cards">
    {% for consultation in consultations %}
        <div class="consultation-card">
            <div class="card-details">
                <div class="card-detail">
                    <span class="detail-label">Date consultation:</span>
                    <span class="detail-value">{{ consultation.getDateC() ? consultation.getDateC()|date('Y-m-d') : '' }}</span>
                </div>
                <div class="card-detail">
                    <span class="detail-label">Pathologie:</span>
                    <span class="detail-value">{{ consultation.getpathologie }}</span>
                </div>
                <div class="card-detail">
                    <span class="detail-label">Remarques:</span>
                    <span class="detail-value">{{ consultation.getremarques }}</span>
                </div>
            </div>
            <div class="action-links">
                <a href="{{ path('supp_consultation', {'id': consultation.getid()}) }}">Delete</a>
                <a href="{{ path('edit_consultation', {'id': consultation.getid()}) }}">Edit</a>
            </div>
        </div>
    {% endfor %}
</div>


<section class="make-appointment">
    <div class="container">
        <div class="row">
            <div class="col-xl-6">
                <div class="make-appointment__left">
                    <div class="section-title text-left">
                        <span class="section-title__tagline">contact with us</span>
                        <h2 class="section-title__title">Let's book <span>Your</span> <br> Appointment</h2>
                    </div>
                    <div class="make-appointment__form-box">
                        {{ form_start(formA, {'attr': {'class': 'make-appointment__form contact-form-validated', 'novalidate': 'novalidate'}}) }}
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="make-appointment__form-input-box">
                                        <label for="{{ formA.date_c.vars.id }}">Date Consultation:</label>
                                        {{ form_widget(formA.date_c, {'attr': {'placeholder': 'Date Consultation', 'class': 'form-control'}}) }}
                                        {{ form_errors(formA.date_c) }} {# Display errors for this field #}
                                    </div>
                                </div>
                                
                                <div class="col-xl-12">
                                    <div class="make-appointment__form-input-box">
                                        <label for="{{ formA.pathologie.vars.id }}">Pathologie:</label>
                                        {{ form_widget(formA.pathologie, {'attr': {'placeholder': 'Pathologie', 'class': 'form-control'}}) }}
                                        {{ form_errors(formA.pathologie) }} {# Display errors for this field #}
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="make-appointment__form-input-box">
                                        <label for="{{ formA.remarques.vars.id }}">Remarques:</label>
                                        {{ form_widget(formA.remarques, {'attr': {'placeholder': 'Remarques', 'class': 'form-control'}}) }}
                                        {{ form_errors(formA.remarques) }} {# Display errors for this field #}
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="make-appointment__form-input-box">
                                        <label for="{{ formA.idp.vars.id }}">Id Patient:</label>
                                        {{ form_widget(formA.idp, {'attr': {'placeholder': 'Id Patient', 'class': 'form-control'}}) }}
                                        {{ form_errors(formA.idp) }} {# Display errors for this field #}
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="make-appointment__form-input-box">
                                        <label for="{{ formA.idt.vars.id }}">Id Thérapeute:</label>
                                        {{ form_widget(formA.idt, {'attr': {'placeholder': 'Id Thérapeute', 'class': 'form-control'}}) }}
                                        {{ form_errors(formA.idt) }} {# Display errors for this field #}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="make-appointment__form-btn-box">
                                        {{ form_row(formA.Ajouter, {'attr': {'class': 'thm-btn make-appointment__form-btn'}}) }}
                                    </div>
                                </div>
                            </div>
                        {{ form_end(formA) }}
                        <div class="result"></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="make-appointment__right">
                    <!-- Add images or other content as needed -->
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

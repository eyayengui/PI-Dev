{% extends 'base-back.html.twig' %}

{% block title %}Activite{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-header">Activite</div>

                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th scope="row">Id</th>
                                    <td>{{ activite.id }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Nom</th>
                                    <td>{{ activite.nom }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Date</th>
                                    <td>{{ activite.Date ? activite.Date|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Genre</th>
                                    <td>{{ activite.genre }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="mt-3">
                    <a href="{{ path('app_activite_index') }}" class="btn btn-secondary">Back to List</a>
                    <a href="{{ path('app_activite_edit', {'id': activite.id}) }}" class="btn btn-primary">Edit</a>
                </div>

                {{ include('activite/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

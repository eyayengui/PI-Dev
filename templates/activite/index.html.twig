{% extends 'base-back.html.twig' %}

{% block title %}Activite index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Activite Index</h1>

        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Date</th>
                            <th scope="col">Genre</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for activite in activites %}
                        <tr>
                            <td>{{ activite.id }}</td>
                            <td>{{ activite.nom }}</td>
                            <td>{{ activite.Date ? activite.Date|date('Y-m-d') : '' }}</td>
                            <td>{{ activite.genre }}</td>
                            <td>
                                <a href="{{ path('app_activite_show', {'id': activite.id}) }}" class="btn btn-info btn-sm">Show</a>
                                <a href="{{ path('app_activite_edit', {'id': activite.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('app_activite_new') }}" class="btn btn-success">Create New</a>
            </div>
        </div>
    </div>
{% endblock %}
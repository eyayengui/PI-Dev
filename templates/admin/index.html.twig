{% extends 'base-back.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Age</th>
                <th>IsBanned</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.age }}</td>
                {% if user.isBanned == 0 %}
                                                    <td>
                                                        <a href="{{ path('ban_user',{'id':user.id}) }}" type="button"
                                                           class="btn btn-danger btn-icon-text" style="color: white">
                                                            <i class="mdi mdi-lock-outline btn-icon-prepend"
                                                               style="color: white"></i> Ban</a>
                                                    </td>
                                                {% else %}
                                                    <td>
                                                        <a href="{{ path('unban_user',{'id':user.id}) }}"
                                                           type="button" class="btn btn-warning btn-icon-text"
                                                           style="color: white">
                                                            <i class="mdi mdi-lock-open-outline btn-icon-prepend"
                                                               style="color: white"></i> Unban</a>
                                                    </td>
                                                {% endif %}
            
                 {% if user.isVerified == 0 %}
                                                    <td class="text-center">
                                                        <a href="{{ path('verify_user',{'id':user.id}) }}"
                                                           type="button" class="btn btn-primary btn-icon-text"
                                                           style="color: white">
                                                            <i class="mdi mdi-check-outline btn-icon-prepend"
                                                               style="color: white"></i> Verify</a>
                                                    </td>
                                                {% else %}
                                                    <td class="text-center">
                                                        <a type="button" class="btn btn-success btn-icon-text"
                                                           style="color: white">
                                                            <i class="mdi mdi-check-outline btn-icon-prepend"
                                                               style="color: white"></i> Verified</a>
                                                    </td>
                                                {% endif %}
                <td>
                    <a href="{{ path('app_admin_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_admin_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                <div class="text-center mt-4">
               <a href="{{ path('app_generer_pdf_historique') }}" class="btn btn-primary" onclick="printTable()">Télécharger PDF</a>
            </div>
    <a href="{{ path('app_admin_new') }}">Create new</a>
   
{% endblock %}

{% extends 'base-back.html.twig' %}

{% block title %}Questionnaires{% endblock %}

{% block body %}
<div class="col-12">
    <div class="box">
        <div class="box-header with-border">
            <h1 class="box-title">{{ questionnaire.titleQuestionnaires }} Details</h1>
        </div>
        <div class="box-body no-padding">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Question</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if questionnaire.questions|length > 0 %}
                            {% for question in questionnaire.questions %}
                                <tr>
                                    <td>{{ question.id }}</td>
                                    <td>{{ question.titleQuestion }}</td>
                                    <td>
                                        <a href="{{ path('app_question_edit', {'id': question.id}) }}">Editer</a> |
                                        <a href="{{ path('app_question_index', {'id': question.id}) }}">Afficher</a> |
                                        <a href="{{ path('app_question_delete', {'id': question.id}) }}" 
                                           onclick="return confirm('Are you sure?')">Supprimer</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="3">Aucune question pour ce questionnaire.</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
                <div class="box-header with-border">
                    <a href="{{ path('app_questionnaires_edit', {'id': questionnaire.id}) }}" class="btn btn-primary">Editer Questionnaire</a>
                    <a href="{{ path('app_question_new') }}" class="btn">Ajouter Question</a>
                    <a href="{{ path('app_questionnaires_index') }}" class="btn btn-secondary">Retourner</a>
                 
                 <div class="box-header with-border">
                    {{ include('questionnaires/_delete_form.html.twig') }}
                 </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}
